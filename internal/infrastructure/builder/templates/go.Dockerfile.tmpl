FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum* ./

# Download dependencies
RUN {{.InstallCommand}}

# Copy source code
COPY . .

{{if .BuildCommand}}
# Build application
RUN {{.BuildCommand}}
{{end}}

# Production stage
FROM alpine:latest

WORKDIR /app

# Install ca-certificates for HTTPS
RUN apk --no-cache add ca-certificates

# Copy binary from builder
COPY --from=builder /app/bin/* /app/

# Expose port
EXPOSE {{.Port}}

# Run application
CMD {{.RunCommand}}

