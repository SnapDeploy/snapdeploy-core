FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN {{.InstallCommand}}

# Copy source code
COPY . .

{{if .BuildCommand}}
# Build TypeScript application
RUN {{.BuildCommand}}
{{end}}

# Production stage
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install production dependencies only
RUN npm ci --only=production

# Copy built artifacts from builder
COPY --from=builder /app/dist ./dist

# Set PORT environment variable
ENV PORT={{.Port}}

# Expose port
EXPOSE {{.Port}}

# Run application
CMD {{.RunCommand}}

